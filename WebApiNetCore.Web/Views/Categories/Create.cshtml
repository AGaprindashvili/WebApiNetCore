@model WebApiNetCore.Web.Models.NewCategoryModel
@{
    ViewData["Title"] = "Add Category";
}

<div class="text-center">
    <h2>Add new category</h2>
</div>

<div class="container">
    <form asp-action="Create" method="post" class="mt-4">
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="CategoryName" class="form-control" id="CategoryName" placeholder="Category name" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="CategoryDescrip" class="form-control" id="CategoryDescrip" placeholder="Category description" />
            <span asp-validation-for="CategoryDescrip" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Submit</button>
    </form>
    <div class="mt-3" style="margin-top: 10px;">
        <span asp-validation-summary="All" class="text-danger"></span>
    </div>
</div>