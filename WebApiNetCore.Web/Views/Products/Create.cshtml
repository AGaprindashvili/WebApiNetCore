@model WebApiNetCore.Web.Models.NewProductModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="text-center">
    <h2>Add new product</h2>
</div>

<div class="container">
    <form asp-action="Create" method="post" class="mt-4">
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="ProductName" class="form-control" id="ProductName" placeholder="Product name" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="ProductDescrip" class="form-control" id="ProductDescrip" placeholder="Product description" />
            <span asp-validation-for="ProductDescrip" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="Specifications" class="form-control" id="Specifications" placeholder="Product specifications" />
            <span asp-validation-for="Specifications" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="CategoryId" class="form-control" id="CategoryId" placeholder="Category GuId" />
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="Price" class="form-control" id="Price" placeholder="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="Discount" class="form-control" id="Price" placeholder="Discount" />
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <input asp-for="Quantity" class="form-control" id="Quantity" placeholder="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Submit</button>
    </form>
    <div class="mt-3" style="margin-top: 10px;">
        <span asp-validation-summary="All" class="text-danger"></span>
    </div>
</div>